<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>html/login-home.html</welcome-file>
    </welcome-file-list>

    <!--   home pages  -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.app.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!--   test pages  -->
    <servlet>
        <servlet-name>SecondRegistrationServlet</servlet-name>
        <servlet-class>com.app.servlet.SecondRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SecondRegistrationServlet</servlet-name>
        <url-pattern>/second-registration</url-pattern>
    </servlet-mapping>


    <!--   login pages  -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.app.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginVoterServlet</servlet-name>
        <servlet-class>com.app.servlet.LoginVoterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginVoterServlet</servlet-name>
        <url-pattern>/login-voter</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginCandidateServlet</servlet-name>
        <servlet-class>com.app.servlet.LoginCandidateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginCandidateServlet</servlet-name>
        <url-pattern>/login-candidate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginAdminServlet</servlet-name>
        <servlet-class>com.app.servlet.LoginAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginAdminServlet</servlet-name>
        <url-pattern>/login-admin</url-pattern>
    </servlet-mapping>


    <!--   registration pages  -->
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.app.servlet.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/TokenRegistration</url-pattern>
    </servlet-mapping>


    <!--   verification pages  -->
    <servlet>
        <servlet-name>VerificationServlet</servlet-name>
        <servlet-class>com.app.servlet.VerificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerificationServlet</servlet-name>
        <url-pattern>/VoterVerification</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PhoneNumServlet</servlet-name>
        <servlet-class>com.app.servlet.PhoneNumServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PhoneNumServlet</servlet-name>
        <url-pattern>/phoneNumberCheck</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VerifyPhoneNumServlet</servlet-name>
        <servlet-class>com.app.servlet.VerifyPhoneNumServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyPhoneNumServlet</servlet-name>
        <url-pattern>/VerifyPhoneNum</url-pattern>
    </servlet-mapping>


    <!--   landing pages  -->
    <servlet>
        <servlet-name>AdminMainpageServlet</servlet-name>
        <servlet-class>com.app.servlet.AdminMainpageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminMainpageServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CandidateMainpageServlet</servlet-name>
        <servlet-class>com.app.servlet.CandidateMainpageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateMainpageServlet</servlet-name>
        <url-pattern>/candidate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VoterMainpageServlet</servlet-name>
        <servlet-class>com.app.servlet.VoterMainpageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VoterMainpageServlet</servlet-name>
        <url-pattern>/voter</url-pattern>
    </servlet-mapping>

    <!-- Filters -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.app.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*/</url-pattern>
    </filter-mapping>

    <!--   privacy policy  -->
    <servlet>
        <servlet-name>PrivacyPolicyServlet</servlet-name>
        <servlet-class>com.app.servlet.PrivacyPolicyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrivacyPolicyServlet</servlet-name>
        <url-pattern>/privacypolicy</url-pattern>
    </servlet-mapping>

    <!--   admin pages  -->
    <servlet>
        <servlet-name>AdminAccountsServlet</servlet-name>
        <servlet-class>com.app.servlet.AdminAccountsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminAccountsServlet</servlet-name>
        <url-pattern>/admin-accounts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminDeleteVoterAccServlet</servlet-name>
        <servlet-class>com.app.servlet.AdminDeleteVoterAccServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDeleteVoterAccServlet</servlet-name>
        <url-pattern>/adminDeleteVoterAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminDeleteCandidateAccServlet</servlet-name>
        <servlet-class>com.app.servlet.AdminDeleteCandidateAccServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDeleteCandidateAccServlet</servlet-name>
        <url-pattern>/adminDeleteCandidateAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminVerificationServlet</servlet-name>
        <servlet-class>com.app.servlet.AdminVerificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminVerificationServlet</servlet-name>
        <url-pattern>/admin-verification</url-pattern>
    </servlet-mapping>

    <!--   voter pages  -->
    <servlet>
        <servlet-name>VoterMyQuestionServlet</servlet-name>
        <servlet-class>com.app.servlet.VoterMyQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VoterMyQuestionServlet</servlet-name>
        <url-pattern>/voter-myquestions</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VoterHelpServlet</servlet-name>
        <servlet-class>com.app.servlet.VoterHelpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VoterHelpServlet</servlet-name>
        <url-pattern>/voter-help</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VoterSettingServlet</servlet-name>
        <servlet-class>com.app.servlet.VoterSettingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VoterSettingServlet</servlet-name>
        <url-pattern>/voter-settings</url-pattern>
    </servlet-mapping>

    <!--   candidate pages  -->
    <servlet>
