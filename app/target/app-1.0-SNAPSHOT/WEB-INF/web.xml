<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.app.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SecondRegistrationServlet</servlet-name>
        <servlet-class>com.app.servlet.SecondRegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SecondRegistrationServlet</servlet-name>
        <url-pattern>/second-registration</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>TestingServlet</servlet-name>
        <servlet-class>com.app.servlet.TestingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TestingServlet</servlet-name>
        <url-pattern>/testing</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VerificationServlet</servlet-name>
        <servlet-class>com.app.servlet.VerificationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VerificationServlet</servlet-name>
        <url-pattern>/VoterVerification</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PhoneNumServlet</servlet-name>
        <servlet-class>com.app.servlet.PhoneNumServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PhoneNumServlet</servlet-name>
        <url-pattern>/phoneNumberCheck</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VerifyPhoneNumServlet</servlet-name>
        <servlet-class>com.app.servlet.VerifyPhoneNumServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VerifyPhoneNumServlet</servlet-name>
        <url-pattern>/VerifyPhoneNum</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dbtestServlet</servlet-name>
        <servlet-class>com.app.servlet.dbtestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>dbtestServlet</servlet-name>
        <url-pattern>/dbtestServlet</url-pattern>
    </servlet-mapping>
</web-app>