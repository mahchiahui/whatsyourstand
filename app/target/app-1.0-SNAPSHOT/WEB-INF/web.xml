    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateMyAnswerServlet</servlet-name>
        <url-pattern>/candidate-myanswers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CandidateMyProfileServlet</servlet-name>
        <servlet-class>com.app.servlet.CandidateMyProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateMyProfileServlet</servlet-name>
        <url-pattern>/candidate-myprofile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CandidateHelpServlet</servlet-name>
        <servlet-class>com.app.servlet.CandidateHelpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateHelpServlet</servlet-name>
        <url-pattern>/candidate-help</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CandidateDeleteAnswerServlet</servlet-name>
        <servlet-class>com.app.servlet.CandidateDeleteAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateDeleteAnswerServlet</servlet-name>
        <url-pattern>/deleteCandidateAnswer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CandidateEditAnswerServlet</servlet-name>
        <servlet-class>com.app.servlet.CandidateEditAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidateEditAnswerServlet</servlet-name>
        <url-pattern>/editCandidateAnswer</url-pattern>
    </servlet-mapping>


    <!-- question -->
    <servlet>
        <servlet-name>QuestionServlet</servlet-name>
        <servlet-class>com.app.servlet.QuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/question</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuestionUpdateServlet</servlet-name>
        <servlet-class>com.app.servlet.QuestionUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionUpdateServlet</servlet-name>
        <url-pattern>/question-update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>com.app.servlet.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>

</web-app>